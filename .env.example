# Living Theory of Change Platform Environment Variables
# Copy this file to .env.local and fill in your values

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=http://localhost:54321
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# Database URL (for migrations and server-side operations)
DATABASE_URL=postgresql://postgres:postgres@localhost:54322/postgres

# Authentication
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-here

# Google OAuth (optional)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# LinkedIn OAuth (optional)
LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret

# AI Provider Configuration
# OpenAI (default provider)
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_RATE_LIMIT=20

# Anthropic (Claude) - for future use
ANTHROPIC_API_KEY=your-anthropic-api-key
ANTHROPIC_MODEL=claude-3-sonnet
ANTHROPIC_RATE_LIMIT=20

# Default AI Provider (openai | anthropic)
DEFAULT_AI_PROVIDER=openai

# Application Settings
NEXT_PUBLIC_APP_NAME="Living Theory of Change"
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Feature Flags
NEXT_PUBLIC_ENABLE_AI_CHAT=true
NEXT_PUBLIC_ENABLE_AI_SYNTHESIS=true
NEXT_PUBLIC_ENABLE_SOCIAL_LOGIN=true

# Analytics (optional)
NEXT_PUBLIC_GA_MEASUREMENT_ID=
NEXT_PUBLIC_POSTHOG_KEY=

# Sentry Error Tracking (optional)
SENTRY_DSN=
SENTRY_AUTH_TOKEN=

# Email Settings (using Supabase)
SMTP_HOST=localhost
SMTP_PORT=54325
SMTP_USER=
SMTP_PASS=
SMTP_FROM=noreply@ltoc.local

# Storage
NEXT_PUBLIC_STORAGE_BUCKET=content-files

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# GDPR Settings
GDPR_DATA_RETENTION_DAYS=730
GDPR_ANONYMIZATION_DAYS=365

# Development Settings
NODE_ENV=development
LOG_LEVEL=debug